<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainView"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".MainActivity" >

        <EditText
            android:id="@+id/url_et"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/rreqdata_req"
            android:layout_alignParentTop="true"
            android:hint="url"
            android:ems="10" />

        <Button
            android:id="@+id/req_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/url_et"
            android:text="request url" />
        <Button
            android:id="@+id/req_192.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/req_url"
            android:text="get 192.168.1.1" />
        <Button
            android:id="@+id/req_192.136"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/req_192.1"
            android:text="get 192.168.1.136" />

        <TextView
            android:id="@+id/recvd_message_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wv"
            android:layout_marginTop="26dp"
            android:text="Messages:" />

        <WebView
            android:id="@id/wv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/recvd_message_tv"
            android:layout_below="@id/req_192.136" />

    </RelativeLayout>

</ScrollView>
